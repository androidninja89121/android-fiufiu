<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <com.pkmmte.view.CircularImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imgvMsgMePhoto"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_user" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/imgvMsgMePhoto"
        android:layout_toStartOf="@+id/imgvMsgMePhoto"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:id="@+id/imageView16"
            android:src="@drawable/bg_message_me_head"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:id="@+id/imageView17"
            android:layout_alignParentBottom="true"
            android:src="@drawable/bg_message_me_bottom"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView18"
            android:src="@drawable/bg_message_me_cent"
            android:scaleType="fitXY"
            android:layout_alignTop="@+id/tvMsgMeContent"
            android:layout_alignBottom="@+id/tvMsgMeContent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/tvMsgMeContent"
            android:gravity="right"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="SENT 11:20 AM"
        android:id="@+id/tvMsgDate"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="60dp" />

</RelativeLayout>
