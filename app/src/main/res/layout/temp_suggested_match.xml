<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white"
    >
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sugges_relative_height"
        android:background="@color/red"
        android:layout_alignParentTop="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text_sugges_text_name"
            android:id="@+id/textView19"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/sugges_textSize_name"
            android:layout_marginLeft="@dimen/sugges_header_margin_left"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/sugges_header_margin_left"
            android:background="#0000ffff"
            android:id="@+id/button3"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/setting"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#0000ffff"
            android:id="@+id/button5"
            android:drawableRight="@drawable/comment"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/button3"
            android:layout_toStartOf="@+id/button3" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/relative1"
        android:layout_height="match_parent"
        android:layout_above="@+id/relative2"

        android:layout_below="@+id/relative"
        android:background="@drawable/wall3">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sugges_linear_marginLeft"
            android:layout_marginStart="@dimen/sugges_linear_marginLeft"
            android:layout_marginBottom="@dimen/sugges_linear_marginBottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_sugges_text_name"
                android:id="@+id/textView20"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/sugges_textView_textSize"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_sugges_age"
                android:id="@+id/textView21"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/sugges_textSize_name"
                android:layout_marginTop="@dimen/sugges_margin_bw_views"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/text_sugges_distance"
                android:drawableRight="@drawable/ic_alarm"
                android:id="@+id/textView22"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/sugges_margin_bw_views"
                android:textStyle="bold"
                android:textSize="@dimen/sugges_textSize_name"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/textView22"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/sugges_margin_bw_views"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/like"
                    android:id="@+id/button6"
                    android:background="#0000ffff"
                    android:layout_weight="1"
                    />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#0000ffff"
                    android:id="@+id/button7"
                    android:drawableLeft="@drawable/wrong"
                    android:layout_weight="1"

                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sugges_relative_height_below"
        android:background="@drawable/advertise_background"
        android:layout_margin="@dimen/sugges_relative_height_below_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_advertise_here"
            android:id="@+id/textView23"
            android:textColor="#b8b8b8"

            android:textSize="@dimen/sugges_advertise_textSize"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="176dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="69dp" />


</RelativeLayout>

