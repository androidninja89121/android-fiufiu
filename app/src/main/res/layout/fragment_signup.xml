<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bg_welcome_3">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView6"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#c4e4e4e4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an account"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <com.pkmmte.view.CircularImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imgvLeftNavPhoto"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:border="true"
        app:border_color="#EEEEEE"
        app:border_width="2dp"
        android:src="@drawable/img_user_photo" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_below="@+id/imgvLeftNavPhoto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/borders_signin_window"
        android:id="@+id/relativeLayout3">

        <EditText
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:id="@+id/etxtUsername"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="20dp"
            android:hint="@string/text_username"
            android:background="@null" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/etxtEmail"
            android:hint="@string/text_email"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/etxtUsername"
            android:layout_alignStart="@+id/etxtUsername"
            android:layout_marginTop="20dp"
            android:layout_alignRight="@+id/etxtUsername" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/etxtPswd"
            android:hint="@string/text_password"
            android:background="@null"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/etxtUsername"
            android:layout_alignStart="@+id/etxtEmail"
            android:layout_marginBottom="2dp"
            android:layout_alignRight="@+id/etxtUsername"
            android:inputType="textPassword" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:src="@drawable/ic_user"
            android:layout_marginLeft="10dp"
            android:layout_alignBottom="@+id/etxtUsername"
            android:layout_marginBottom="3dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView8"
            android:src="@drawable/ic_email"
            android:layout_alignBottom="@+id/etxtEmail"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView9"
            android:src="@drawable/ic_pswd"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp"
            android:layout_alignBottom="@+id/etxtPswd" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/relativeLayout3"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/relativeLayout3"
        android:layout_alignLeft="@+id/relativeLayout3"
        android:layout_alignStart="@+id/relativeLayout3"
        android:id="@+id/linearLayout">

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/spinnerGender"
            android:layout_weight="1"
            android:background="@drawable/borders_signin_window" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView10"
            android:src="@drawable/ic_down"
            android:layout_marginLeft="-45dp" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/spinnerLookingFor"
            android:layout_weight="1"
            android:background="@drawable/borders_signin_window"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView11"
            android:src="@drawable/ic_down"
            android:layout_marginLeft="-45dp" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="@string/text_big_signup"
        android:id="@+id/btnSignup"
        android:layout_below="@+id/linearLayout"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/linearLayout"
        android:background="@drawable/bg_btn_sign"
        android:textColor="@color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="@string/text_back_to_home"
        android:id="@+id/btnBack"
        android:layout_below="@+id/btnSignup"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/linearLayout"
        android:background="@drawable/bg_btn_facebook"
        android:textColor="@color/white" />

</RelativeLayout>
