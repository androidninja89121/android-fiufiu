<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_welcome_2"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="@dimen/login_outer_margin"
        android:layout_height="match_parent"
        android:gravity="center"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_marginTop="@dimen/login_margin_top_bw_view"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout8">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Welcome to "
                android:id="@+id/textView14"
                android:textColor="#fff"
                android:gravity="right"
                android:textSize="@dimen/login_welcom_textsize"
                android:layout_weight="1"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Fiufiu"
                android:id="@+id/textView15"
                android:gravity="left"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#da2a13"
                android:textSize="@dimen/login_welcom_textsize"
                android:layout_toRightOf="@+id/textView14"
                android:layout_toEndOf="@+id/textView14" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edittext_height"
            android:background="@drawable/bg_btn_facebook"
            android:id="@+id/button2"
            android:text="@string/text_login_facebook"
            android:textColor="@color/white"
            android:textSize="@dimen/login_btn_text_size"
            android:paddingLeft="@dimen/login_btn_padding_left"
            android:paddingRight="@dimen/login_btn_padding_left"
            android:drawableLeft="@drawable/facebook_icon"
            android:layout_marginTop="@dimen/login_margin_top_bw_view"
            android:layout_below="@+id/relativeLayout8"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edittext_height"
            android:id="@+id/etxtUsername"
            android:layout_below="@+id/button2"
            android:drawableLeft="@drawable/ic_user"
            android:hint="Username"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:textSize="@dimen/logineditTexttextSize"
            android:background="@drawable/text_area"
            android:layout_marginTop="@dimen/login_margin_top_bw_view"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edittext_height"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etxtPassword"
            android:textSize="@dimen/logineditTexttextSize"
            android:hint="Password"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/ic_pswd"
            android:background="@drawable/text_area2"
            android:layout_below="@+id/etxtUsername"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edittext_height"
            android:textSize="@dimen/login_btn_text_size"
            android:id="@+id/btnLogin"
            android:text="@string/text_login_manually"
            android:textColor="@color/white"
            android:background="@drawable/bg_btn_sign"
            android:layout_below="@+id/etxtPassword"
            android:paddingLeft="@dimen/login_btn_padding_left"
            android:paddingRight="@dimen/login_btn_padding_left"
            android:drawableLeft="@drawable/edit_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/login_margin_top_bw_view" />
    </RelativeLayout>
</RelativeLayout>
